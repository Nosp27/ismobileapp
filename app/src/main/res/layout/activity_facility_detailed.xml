<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <fragment
            android:id="@+id/layout_header"
            android:tag="facility_detailed_layout_header"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:layout="@layout/header_fragment"
            android:name="com.pashikhmin.ismobileapp.HeaderFragment"
            app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="0dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="95dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/ic_layout_body"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                tools:context="com.pashikhmin.ismobileapp.FacilityDetailed"
                android:scrollbars="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
        >
            <ImageView
                    android:id="@+id/detailed_facility_image"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background"
            />
            <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="6dp"
                    android:id="@+id/liked"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_star_filled"/>
            <TextView
                    android:id="@+id/facility_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/detailed_facility_image"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="4dp"
                    android:textSize="10pt"
                    android:layout_marginTop="26dp"
                    android:text="@string/large_text"
            />
            <GridLayout
                    android:id="@+id/tag_cloud"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/facility_description"
                    android:columnCount="2"
            >
            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>