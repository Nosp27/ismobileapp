<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="SELECT REGIONS"
            android:id="@+id/tv_select_regions"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/label_style"
    />

    <Spinner
            android:id="@+id/listRegions"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tv_select_regions"
            app:layout_constraintStart_toStartOf="@id/tv_select_regions"
            style="@style/spinner_style"
            android:dropDownWidth="300dp"
    />

    <TextView
            android:text="SELECT CATEGORIES"
            android:id="@+id/tv_select_categories"
            app:layout_constraintTop_toBottomOf="@id/listRegions"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/label_style"
            android:layout_marginTop="12dp"
    />

    <Spinner
            android:id="@+id/listCategories"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tv_select_categories"
            app:layout_constraintStart_toStartOf="@id/tv_select_categories"
            style="@style/spinner_style"
            android:dropDownWidth="300dp"
    />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_select_regions"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="SELECT"
            style="@style/confirm_button_style"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
