<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/ic_layout_header"
        xmlns:android="http://schemas.android.com/apk/res/android"
>
    <TextView
            android:id="@+id/tv_header"
            android:text="SAMPLE TEXT"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/btn_notification"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/light_label_style"
    />
    <TextView
            android:id="@+id/tv_user_name"
            android:text="SAMPLE TEXT"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_header"
            app:layout_constraintEnd_toEndOf="@id/btn_notification"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/light_label_style"
            android:textSize="12pt"
    />
    <ImageButton
            android:id="@+id/btn_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bell"
            android:layout_marginEnd="43dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/notification_counter"
            android:text="2"
            android:layout_width="13.81dp"
            android:layout_height="13.67dp"
            android:textSize="5pt"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/ic_red_circle"
            app:layout_constraintTop_toTopOf="@id/btn_notification"
            app:layout_constraintEnd_toEndOf="@id/btn_notification"
    />

</androidx.constraintlayout.widget.ConstraintLayout>