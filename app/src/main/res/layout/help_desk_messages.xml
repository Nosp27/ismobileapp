<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.pashikhmin.ismobileapp.HelpDeskActivity"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
>
    <fragment
            android:id="@+id/layout_header"
            android:tag="facility_list_layout_header"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:layout="@layout/header_fragment"
            android:name="com.pashikhmin.ismobileapp.HeaderFragment"
            app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="95dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_layout_body"
            tools:context="com.pashikhmin.ismobileapp.HelpDeskActivity">
        <ListView
                android:id="@+id/helpdesk_messages"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="11"
                android:gravity="fill_horizontal">
        </ListView>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="10"
        >
            <EditText
                    android:id="@+id/helpdesk_message_input"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/helpdesk_messages"
            />
            <ImageButton
                    android:id="@+id/send_message"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_issue_menu_icon"
                    android:scaleType="centerInside"
                    android:background="@color/transparent"
            />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
