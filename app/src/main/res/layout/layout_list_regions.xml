<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorShade"
>
    <CheckBox android:id="@+id/region_selected"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="26sp"
    />
    <ImageView android:id="@+id/item_img"
               android:layout_width="45dp" android:layout_height="45dp"
               android:layout_toEndOf="@id/region_selected"
               android:src="@drawable/ic_launcher_background"
               android:layout_margin="20sp"
    />
    <TextView android:id="@+id/list_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toEndOf="@id/item_img"
              android:text="Region name"
              android:layout_marginTop="15dp"
              android:textSize="8pt"
              />
    <TextView android:id="@+id/list_subtitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="location"
              android:layout_below="@+id/list_title"
              android:layout_toRightOf="@id/item_img"
    />
</RelativeLayout>