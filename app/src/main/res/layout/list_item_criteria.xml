<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/list_item_style"
>
    <CheckBox android:id="@+id/region_selected"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignTop="@id/item_img"
              android:layout_alignBottom="@id/item_img"
    />
    <ImageView android:id="@+id/item_img"
               android:layout_width="45dp" android:layout_height="45dp"
               android:layout_toEndOf="@id/region_selected"
               android:src="@drawable/ic_launcher_background"
               android:layout_marginTop="10sp"
               android:layout_marginBottom="4sp"
    />
    <TextView android:id="@+id/list_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toEndOf="@id/item_img"
              android:text="Region name"
              android:layout_marginTop="5dp"
              android:layout_marginStart="5dp"
              android:textSize="8pt"
              android:textColor="@color/colorPrimaryDark"
              />
    <TextView android:id="@+id/list_subtitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="location"
              android:layout_below="@+id/list_title"
              android:layout_toRightOf="@id/item_img"
              android:layout_marginTop="5dp"
              android:layout_marginStart="5dp"
              android:textColor="@color/colorPrimaryDark"
    />
</RelativeLayout>